<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appgenius.enchant" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Enchant</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
	<icon src="images/logo.png" />
<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="images/splash.png" density="land-hdpi"/>
    <splash src="images/splash.png" density="land-ldpi"/>
    <splash src="images/splash.png" density="land-mdpi"/>
    <splash src="images/splash.png" density="land-xhdpi"/>
    <splash src="images/splash.png" density="port-hdpi"/>
    <splash src="images/splash.png" density="port-ldpi"/>
    <splash src="images/splash.png" density="port-mdpi"/>
    <splash src="images/splash.png" density="port-xhdpi"/>
</platform>
	 <preference name="SplashScreen" value="screen" />
	<preference name="SplashScreenDelay" value="5000" />
</widget>
